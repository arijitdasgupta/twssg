---
layout: base.njk
---
<article class="post">
  <h1>{{ title }}</h1>
  <time datetime="{{ published_at }}">{{ published_at | dateDisplay }}</time>
  {% if feature_image %}
  <img src="{{ feature_image }}" alt="{{ title }}" class="feature-image">
  {% endif %}
  <div class="post-content">
    {{ content | safe }}
  </div>
</article>
